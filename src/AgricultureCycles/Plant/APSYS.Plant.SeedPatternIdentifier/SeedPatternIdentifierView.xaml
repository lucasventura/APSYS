<Window x:Class="APSYS.Plant.SeedPatternIdentifier.SeedPatternIdentifierView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:serialPortControl="clr-namespace:APSYS.Infrastructure.Communication.SerialPortControl;assembly=APSYS.Infrastructure.Communication.SerialPortControl"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="SeedPatternIdentifierView">
    <xctk:BusyIndicator BusyContent="{Binding StatusProcessamento}" IsBusy="{Binding Processando}" >
        <StackPanel>
            <StackPanel>
                <serialPortControl:SerialPortControlView Width="130" HorizontalAlignment="Left"></serialPortControl:SerialPortControlView>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Button  Command="{Binding SaveCommand}">Salvar</Button>
                <Button  Command="{Binding PatternIdentifierCommand}">Identificar Padrão</Button>
            </StackPanel>
        </StackPanel>
    </xctk:BusyIndicator>
</Window>
